{
  "name": "graphql-orm-datasource-sample",
  "version": "1.0.0",
  "description": "Sample repo to show usage of graphql-orm-datasource with Apollo Server, GraphQL and TypeORM",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "start:dev": "ts-node ./src/index.ts",
    "start": "node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migrate": "npm run typeorm migration:run",
    "rollback": "npm run typeorm migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muratyaman/graphql-orm-datasource-sample.git"
  },
  "keywords": [
    "graphql",
    "orm",
    "datasource",
    "apollo",
    "server",
    "typeorm"
  ],
  "author": "Haci Murat Yaman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/muratyaman/graphql-orm-datasource-sample/issues"
  },
  "homepage": "https://github.com/muratyaman/graphql-orm-datasource-sample#readme",
  "devDependencies": {
    "@types/node": "^14.14.31",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "apollo-server": "^2.21.0",
    "graphql": "^15.5.0",
    "graphql-orm-datasource": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2"
  }
}
